<h1>Post</h1>

<%= image_tag @post.image.url(:medium) %>
<%= @post.caption %>

<% if @post.user.id == current_user.id %>
    <%= link_to 'Edit', edit_post_path(@post) %>
    <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: "You Sure?" } %>
<% end %>

<%= link_to 'Back', posts_path %>